{
  "name": "object-decoder",
  "description": "A TypeScript object decoder library",
  "author": "Luca Warmenhoven",
  "type": "module",
  "private": false,
  "version": "1.0.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "tsc --p ./tsconfig.release.json",
    "check:types": "tsc --noEmit",
    "lint": "eslint --fix \"./src/**/*.ts\" --cache --max-warnings 0",
    "test": "vitest run",
    "test:bench": "vitest bench",
    "sanity": "npm run lint && npm run check:types && npm run test",
    "prepublishOnly": "npm run clean; npm run sanity && npm run build"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.3.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@types/json-schema": "^7.0.15"
  }
}
